---
import InputSearch from "../tablify-demo/InputSearch.astro";

import GitHubSVG from "../../assets/svgs/github-142-svgrepo-com.svg";
import LinkedInSVG from "../../assets/svgs/linkedin-svgrepo-com.svg";

const quickAccess = [
  {
    id: 1,
    name: "GitHub",
    url: "https://github.com/cris-01000011",
    icon: GitHubSVG,
    colors: "bg-gradient-to-br from-[rgba(180,190,254,0.7)] to-[rgba(203,166,247,0.7)]"
  },
  {
    id: 2,
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/cris01000011/",
    icon: LinkedInSVG,
    colors: "bg-gradient-to-br from-[rgba(137,180,250,0.7)] to-[rgba(180,190,254,0.7)]"
  }
];
---

<div class="col-span-2 lg:col-span-1 border-2 border-[rgba(49,50,68,0.9)] w-full h-full p-2 rounded-2xl">
  <InputSearch />

  <div class="grid grid-cols-[repeat(auto-fill,minmax(100px,1fr))] gap-1 place-items-center max-h-[calc(100vh-135px)] overflow-y-auto scroll-hide mt-2">
    {quickAccess.map((qa) => (
      <a
        href={qa.url}
        class={`${qa.colors} flex items-center justify-center w-[100px] min-h-[85px] max-h-[85px] px-[2px] rounded-2xl transition-transform`}
        target="_blank"
      >
        <div class="hover:backdrop-blur-3xl hover:bg-[rgba(49,50,68,0.75)] transition-colors duration-300 bg-[#313244] flex flex-col w-full h-[81px] rounded-[15px]">
          <div class="flex items-center justify-center text-3xl w-full h-2/3">
            <qa.icon width={32} height={32}>
          </div>
          <div class="w-full h-1/3 text-center text-sm truncate px-2">
            <span>{qa.name}</span>
          </div>
        </div>
      </a>
    ))}
  </div>
</div>
