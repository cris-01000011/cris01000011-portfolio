---
const { id, openDirection, width = "w-auto" } = Astro.props;
---
<dialog id={id} class="text-black/50">
  <div
    class="fixed top-0 left-0 w-full h-full z-0"
    onclick="this.parentElement.close()"
  ></div>

  <div class={`animate-fade fixed bottom-[calc(48px)] ${openDirection} ${width} h-auto p-2 bg-white/40 border-1 border-black/5 backdrop-blur-[5px] shadow-md rounded-xl`}>
    <slot />
  </div>
</dialog>

<style>
  @keyframes fade {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade {
    animation: fade 0.25s linear;
  }

  dialog::backdrop {
    background: transparent;
  }
</style>
